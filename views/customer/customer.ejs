<%- include('../partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
      <h2><%= customer.companyName %></h2>
      <h3><%= customer.fullName %></h3>
      <a href="/customers/editCustomer/<%= customer.id %>" class="btn btn-primary">Edit</a>
    <div class="col-6">
      <h4>Phone</h4>
      <% if (customer.phone) { %>
      <span><%= customer.phone %></span>
      <% } else { %>
      <span>not entered</span>
      <% } %>
      <br>
      <h4>email</h4>
      <% if (customer.phone) { %>
      <span><%= customer.email %></span>
      <% } else { %>
        <span>not entered</span>
      <% } %>
      <div class="row justify-content-between">
        <h4 class="col-6">Address: </h4>
        <span><%= customer.address %></span>
        <span><%= customer.city %></span>
        <span><%= customer.state %></span>
        <span><%= customer.zip %></span>
      </div>
    </div>
    <div class="col-6 mt-5">
      <h5>Charge Limit</h5>
      <p><%= customer.limit %></p>
      <h5>Terms</h5>
      <p><%= customer.terms %></p>
      <h5>Tax Exempt Id</h5>
      <% if (customer.taxId) { %>
        <p><%= customer.taxId %></p>
        <% } else { %>
        <p>not exempt</p>
        <% } %>
      <h5>Current Balance</h5>
      <p><%= customer.balance %></p>
      <h5>Date Added</h5>
      <p><%= customer.addedOn.toString() %></p>
    </div>

    <!-- Invoices!!!  -->

    <a href="/invoices/newInvoice/" data="<%= customer._id %>" class="btn btn-primary">
      New Invoice
    </a>

    <h4>Invoices</h4>
    <ul>
    <% invoices.forEach( el => { %>
      <% if (!isPaid) { %>
            <li class='invoice' data-id='<%=el._id%>'>
                <span><%= el.date %></span>
                <span><%= el.total %></span>
                <a class="btn btn-primary" href="/invoices/<%= el.id %>">View</a>
            </li>
      <% } %>
    <% }) %>    
    </ul>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/customers">Return to Customers</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
