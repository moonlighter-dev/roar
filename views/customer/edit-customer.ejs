<div class="container mx-auto">
  <div class="content-center mt-5">
    <div class="col-12">
      <div class="mt-5">
        <h2>Edit <%= customer.companyName %></h2>
        <form action="/customers/updateCustomer/<%= customer._id %>?_method=PUT"
        method="POST">
          <div class="mb-3">
              <label for="companyName" class="form-label">Company Name</label>
              <input type="text" class="form-control" id="companyName" name="companyName" value="<%= customer.companyName %>" required>
              <small>(or person's name - last, first)</small>
          </div>
          <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName" value="<%= customer.fullName %>" required>
            <small>contact name, first last, or company name</small>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" id="phone" name="phone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" value="<%= customer.phone %>">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="altPhone" class="form-label">Alt Phone</label>
            <input type="tel" class="form-control" id="altPhone" name="altPhone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" value="<%= customer.altPhone %>">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= customer.email %>">
          </div>
          <div class="mb-3">
            <label for="billTo" class="form-label">Bill To</label>
            <textarea class="form-control" rows="4" id="billTo" name="billTo"><%= customer.billTo %></textarea>
          </div>
          <div class="mb-3">
            <label for="limit" class="form-label">Credit Limit</label>
            <input type="number" step="0.01" class="form-control" id="limit" name="limit" value="<%= customer.limit %>" min="100.00" max="5000.00">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

    <div class="col-6 mt-5">
      <form action="/customers/deleteCustomer/<%= customer._id %>?_method=DELETE" method="POST" class="col-3">
      <button class="btn btn-danger fa fa-trash" type="submit">Delete this Customer</button>
      </form>
      <a class="btn btn-primary" href="/customers">Return to Customers</a>
    </div>
  </div>
</div>
