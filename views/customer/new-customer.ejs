<%- include('../partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-8">
      <div class="mt-5">
        <h2>Add a customer</h2>
        <form action="/customers/createCustomer" method="POST">
          <div class="mb-3">
            <label for="companyName" class="form-label"><h5>Company Name</h5></label>
            <input type="text" class="form-control" id="companyName" name="companyName" required>
            <small>(or person's name - last, first)</small>
          </div>
          <div class="mb-3">
            <label for="fullName" class="form-label"><h5>Full Name</h5></label>
            <input type="text" class="form-control" id="fullName" name="fullName" required>
            <small>contact name, first last, or company name</small>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" id="phone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" name="phone">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="altPhone" class="form-label">Alt Phone</label>
            <input type="tel" class="form-control" id="altPhone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" name="altPhone">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">email</label>
            <input type="text" class="form-control" id="email" name="email">
          </div>
          <div class="mb-3">
            <label for="billTo" class="form-label">Bill To</label>
            <textarea class="form-control" rows="4" id="billTo" name="billTo" required>
Name
Address
City, State Zip
            </textarea>
          </div>
          <div class="mb-3">
            <label for="limit" class="form-label">Credit Limit</label>
            <input type="number" step="0.01" class="form-control" id="limit" name="limit" min="100.00" max="5000.00" required>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
  </div>
</div>

<%- include('../partials/footer') -%>
