<div class="container mx-auto">
  <div class="content-center mt-5">
    <div class="col-8">
      <div class="mt-5">
        <h2>Add a customer</h2>
        <div class="divider"></div>
        <form action="/customers/createCustomer" method="POST">
          <div class="mb-3">
            <label for="companyName" class="input-group"><h5>Company Name</h5></label>
            <input type="text" class="form-control" id="companyName" name="companyName" required>
            <small>(or person's name - last, first)</small>
          </div>
          <div class="mb-3">
            <label for="fullName" class="input-group"><h5>Full Name</h5></label>
            <input type="text" class="form-control" id="fullName" name="fullName" required>
            <small>contact name, first last, or company name</small>
          </div>
          <div class="mb-3">
            <label for="phone" class="input-group">Phone</label>
            <input type="tel" class="form-control" id="phone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" name="phone">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="altPhone" class="input-group">Alt Phone</label>
            <input type="tel" class="form-control" id="altPhone" pattern="[(][0-9]{3}[)][0-9]{3}[-][0-9]{4}" name="altPhone">
            <small>(xxx)xxx-xxxx</small>
          </div>
          <div class="mb-3">
            <label for="email" class="input-group">email</label>
            <input type="email" class="form-control" id="email" name="email">
          </div>
          <div class="mb-3">
            <label for="billTo" class="input-group">Bill To</label>
            <textarea class="form-control" rows="4" id="billTo" name="billTo" required>
Name
Address
City, State Zip
            </textarea>
          </div>
          <div class="mb-3">
            <label for="limit" class="input-group">Credit Limit</label>
            <input type="number" step="0.01" class="form-control" id="limit" name="limit" min="100.00" max="5000.00" required>
          </div>
          <div class="mb-3">
            <label for="openingBalance" class="input-group">Opening Balance</label>
            <input type="number" step="0.01" class="form-control" id="openingBalance" name="openingBalance" min="100.00" max="5000.00">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
  </div>
</div>
