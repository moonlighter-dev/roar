<%- include('../partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="mt-5">
        <h2>Add a customer</h2>
        <form action="/customers/createCustomer" method="POST">
          <div class="mb-3">
            <label for="companyName" class="form-label">Company Name</label>
            <input type="text" class="form-control" id="companyName" name="companyName">
          </div>
          <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName">
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="text" class="form-control" id="phone" name="phone">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">email</label>
            <input type="text" class="form-control" id="email" name="email">
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Mailing Address</label>
            <input type="text" class="form-control" id="address" name="address">
          </div>
          <div class="mb-3">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" name="city">
          </div>
          <div class="mb-3">
            <!-- should be a select option for TX or LA, or all states if desired -->
            <label for="state" class="form-label">State</label>
            <input type="text" class="form-control" id="state" name="state" placeholder="TX">
          </div>
          <div class="mb-3">
            <label for="zip" class="form-label">Zip Code</label>
            <input type="text" class="form-control" id="zip" name="zip" placeholder="75951">
          </div>
          <div class="mb-3">
            <label for="limit" class="form-label">Credit Limit</label>
            <input type="text" class="form-control" id="limit" name="limit">
          </div>
          <div class="mb-3">
            <label for="taxId" class="form-label">Tax Id if Exempt</label>
            <input type="text" class="form-control" id="taxId" name="taxId">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/customers">Return to Customers</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
