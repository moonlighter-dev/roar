<div class="container mx-auto">
  <div class="content-center mt-5">
    <div class="col-8">
      <div class="mt-5">
        <h2>Add an Invoice</h2>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Scan</label>
            <input type="file" class="form-control" id="imageUpload" form="invoiceForm" name="file" required>
            <button class="btn" id="automagic">Automagic</button><span>optional</span>
          </div>
          <form action="/invoices/createInvoice" id="invoiceForm" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <!-- select from customer list -->
              <label for="customer" class="form-label">Customer</label>
              <select name="customer" class="form-control" id="customer" required>
                <option value="" disabled selected>--Choose customer--</option>
                <% customers.forEach(customer => { %>
                  <option value="<%= customer._id %>" id="customers"><%= customer.companyName %></option>
                <% }) %>
              </select>
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
          </div>
          <div class="mb-3">
            <label for="total" class="form-label">Total</label>
            <input type="number" step="0.01" class="form-control" id="total" name="total" required>
          </div>
          <div class="mb-3">
            <label for="number" class="form-label">Invoice Number</label>
            <input type="number" class="form-control" id="number" step="1" name="number" required>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/customers">Return to Customers</a>
    </div>
  </div>
</div>
