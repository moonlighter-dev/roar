<%- include('../partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="mt-5">
        <h2>Add an Invoice</h2>
        <form action="/invoices/createInvoice" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <!-- select from customer list -->
              <label for="customer" class="form-label">Customer</label>
              <select name="customer" id="customer">
                  <% customers.forEach(customer => { %>
                    <option value="<%= customer.id %>"><%= customer.companyName %></option>
                  <% }) %>
              </select>
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date">
          </div>
          <div class="mb-3">
            <label for="total" class="form-label">Total</label>
            <input type="number" class="form-control" id="total" name="total">
          </div>
          <div class="mb-3">
            <label for="number" class="form-label">Invoice Number</label>
            <input type="number" class="form-control" id="number" name="number">
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Scan</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/customers">Return to Customers</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
