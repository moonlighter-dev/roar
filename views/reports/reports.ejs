  <main>
    <div class="container mx-auto">
      <div class="mt-5">
        <p><strong>Reports</strong></p>
      </div>
    <section>
      <div class="row input-group mt-5">
        <h3>Daily Report</h3>
        <form action="/reports/createDaily/" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
          </div>
          <div class="mb-3">
            <label for="checks" class="form-label">Total Checks</label>
            <input type="number" step="0.01" class="form-control" id="checks" name="checks">
          </div>
          <div class="mb-3">
            <label for="cc" class="form-label">CC Batch</label>
            <input type="number" class="form-control" id="cc" step="0.01" name="cc">
          </div>
          <div class="mb-3">
            <label for="redeemGC" class="form-label">Redeem GC</label>
            <input type="number" class="form-control" id="redeemGC" step="0.01" name="redeemGC">
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Global X</label>
            <input type="file" class="form-control" id="imageUpload" name="file" required>
          </div>
          <button type="submit" class="btn btn-primary">Review Report</button>
        </form>
    </div>
    </section>
    <section>
      <h3>Finance Charges</h3>
      <form action="/invoices/financeCharges/">
        <div class="mb-3">
          <label for="chargeDate" class="form-label">Charge Date</label>
          <input type="chargeDate" class="form-control" id="chargeDate" name="chargeDate" required>
          <!-- Make sure this is the last day of the previous month, so the charge will show up on the statement. Only one batch of finance charges should be allowed per month -->
        </div>
        <button type="submit" class="btn btn-primary">Review Charges</button>
      </form>     
    </section>
    <section>
      <!-- <div class="row justify-content-center mt-5">
        <a href="/reports/newMonthly/" class="btn btn-primary">
          Review Statements
        </a>
      </div>       -->
    </section>
  </div>  
</main>